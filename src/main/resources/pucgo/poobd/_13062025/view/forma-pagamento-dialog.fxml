<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="pucgo.poobd._13062025.controller.FormaPagamentoDialogController"
      spacing="10" padding="10">
    
    <Label text="Nova Forma de Pagamento" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
    
    <GridPane vgap="10" hgap="10">
        <Label text="Nome:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <TextField fx:id="nomeField" GridPane.columnIndex="1" GridPane.rowIndex="0" />
        
        <Label text="Descrição:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="descricaoField" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    </GridPane>
    
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancelar" onAction="#handleCancelar" />
        <Button text="Salvar" onAction="#handleSalvar" defaultButton="true" />
    </HBox>
</VBox> 